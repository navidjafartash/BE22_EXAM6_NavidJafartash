{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 text-light">Upcoming Events</h1>

    <div class="mb-4 d-flex justify-content-center">
        <a href="{{ path('event_index') }}" class="btn btn-outline-primary mx-2 rounded-pill">
            <i class="fas fa-calendar-alt"></i> All
        </a>
        <a href="{{ path('event_index', {'type': 'music'}) }}" class="btn btn-outline-info mx-2 rounded-pill">
            <i class="fas fa-music"></i> Music
        </a>
        <a href="{{ path('event_index', {'type': 'sport'}) }}" class="btn btn-outline-warning mx-2 rounded-pill">
            <i class="fas fa-football-ball"></i> Sport
        </a>
        <a href="{{ path('event_index', {'type': 'movie'}) }}" class="btn btn-outline-success mx-2 rounded-pill">
            <i class="fas fa-film"></i> Movie
        </a>
        <a href="{{ path('event_index', {'type': 'theater'}) }}" class="btn btn-outline-danger mx-2 rounded-pill">
            <i class="fas fa-theater-masks"></i> Theater
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for event in events %}
            <div class="col">
                <div class="card h-100 shadow-lg rounded-4 card-hover">
                    <div class="card-img-container">
                        <img src="{{ event.image }}" class="card-img-top rounded-top-4 img-fluid" alt="{{ event.name }}">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ event.name }}</h5>
                        <p class="card-text"><i class="fas fa-calendar-alt"></i> {{ event.date|date('Y-m-d H:i') }}</p>
                        <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-primary rounded-pill">
                            <i class="fas fa-info-circle"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center text-white">No events found.</p>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-center mt-5">
        <a href="{{ path('event_new') }}" class="btn btn-success rounded-pill">
            <i class="fas fa-plus-circle"></i> Create New Event
        </a>
    </div>
{% endblock %}
